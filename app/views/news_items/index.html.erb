<p id="notice"><%= notice %></p>

<h1>News Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub header</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_items.each do |news_item| %>
      <tr>
        <td><%= news_item.title %></td>
        <td><%= news_item.sub_header %></td>
        <td><%= news_item.content %></td>
        <td><%= news_item.image %></td>
        <td><%= link_to 'Show', news_item %></td>
        <td><%= link_to 'Edit', edit_news_item_path(news_item) %></td>
        <td><%= link_to 'Destroy', news_item.image.url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>News!</h1>

<% @news_items.each do |news_item| %>
  <a href="<%= news_item_path news_item%>">
    <%= image_tag(news_item.image.thumbnail.url, :class => "thumbnail inline") %>
    <h2><%= news_item.title %></h2>
    <h3><%= news_item.sub_header %></h3>
  </a>
<% end %>

<%= link_to 'New News Item', new_news_item_path %>
